            MotamamId = App.budgeProject.queryById('CboMotamam').getValue();
        if (command == "Down") {
            App.budgeProject.body.mask('در حال بارگذاری...');
            Ext.net.DirectMethod.request({
                url: '/Budget/Pishbini/ProjeHa',
                params: {
                    CodingBudge: RowId,
                    Year: '@ViewBag.Year',
                    MotamamId: MotamamId
                },
