            for (var i = 0; i < changedRow.length ; i++) {
                var MablaghHa = new Array();
                for (var j = 0; j < Mablah_Columns.length; j++) {
                    MablaghHa.push({
                        Mablagh: changedRow[i].get(Mablah_Columns[j].dataIndex),
