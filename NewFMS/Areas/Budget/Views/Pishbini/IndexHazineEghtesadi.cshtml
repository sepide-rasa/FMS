    function SaveEghtesadi() {
        
        var MotamamId = null;
        if ('@ViewBag.NoeAmaliat' != 1)
            MotamamId = App.Eghtesadi.queryById('CboMotamam').getValue();
        var EghtesadiVal = new Array();

