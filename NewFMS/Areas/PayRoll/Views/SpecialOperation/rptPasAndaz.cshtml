@using Ext.Net.MVC;

@(
 Html.X().Window().Height(560).Width(1000)
    .Title("پیش نمایش")
    .ID("PrintrptPasAndazMeli")
    .AutoScroll(true)
    .Maximized(true)
    .Modal(true)
    .Listeners(l => l.AfterRender.Handler = "LoadReportPasAndazMeli();")
    .Closable(true)
    .CloseAction(Ext.Net.CloseAction.Destroy)
    .Html("<center><object class='se-pre-con' style='width: 100%;height: 100%;border: 1px solid #ccc;' type='application/pdf' data='/PayRoll/SpecialOperation/GenaratePdfrptPasAndazMeli?DisketId=" + @ViewBag.DisketId + "'></object></center>")
)

<script>
    function LoadReportPasAndazMeli() {
        var a = $('object');
        var h = App.PrintrptPasAndazMeli.height;
        a.height(h-35);
    }
</script>