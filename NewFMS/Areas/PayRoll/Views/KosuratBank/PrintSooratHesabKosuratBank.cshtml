@using Ext.Net.MVC;

@(
 Html.X().Window()
    .ID("PrintSooratHesabKosuratBank")
    .Modal(true)
    .Width(925)
    .Height(500)
    .Title("پیش نمایش")
    .AutoScroll(false)
    .Closable(true)
    .CloseAction(Ext.Net.CloseAction.Destroy).Listeners(l => l.AfterRender.Handler = "LoadReport();")
    .Html("<center><object class='se-pre-con' style='width: 100%;height: 100%;border: 1px solid #ccc;' type='application/pdf' data='/PayRoll/KosuratBank/GeneratePDFSooratHesabBank?KosouratId=" +
                ViewBag.KosouratId + "&PersonalId=" + ViewBag.PersonalId + "&OrganId=" + ViewBag.OrganId + "'></object></center>")
)
<script>
    function LoadReport() {
        var a = $('object');
        var h = App.PrintSooratHesabKosuratBank.height;
        a.height(h-35);
    }
</script>
