
@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@using NewFMS.Models;
@Html.X().ResourceManager().RTL(true).Locale("fa-ir").Theme((Ext.Net.Theme).3)
@{
    Layout = null;
}
@{var X = Html.X();

}
<img src="~/Content/header.jpg" style="width:100%;" />
<style>
    .whitecolorrrr {
        color: white;
        font-size: 14px;
    }

    .redcolorrrr {
        color: red;
        font-size: 14px;
    }

    body {
        background: #628db5;
        text-align: right;
    }

    .x-panel-body {
        background: transparent;
        text-align: right;
    }

    #pnllogin-innerCt {
        background-color: #dfe8f6;
        text-align: right;
    }

    #pnlLowS-innerCt {
        background-color: transparent;
        text-align: right;
    }

    td {
        text-align: right;
    }

    #pnl1-innerCt {
        background: rgba(212,228,239,1);
        background: -moz-linear-gradient(top, rgba(212,228,239,1) 0%, rgba(98,141,181,1) 100%);
        background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(212,228,239,1)), color-stop(100%, rgba(98,141,181,1)));
        background: -webkit-linear-gradient(top, rgba(212,228,239,1) 0%, rgba(98,141,181,1) 100%);
        background: -o-linear-gradient(top, rgba(212,228,239,1) 0%, rgba(98,141,181,1) 100%);
        background: -ms-linear-gradient(top, rgba(212,228,239,1) 0%, rgba(98,141,181,1) 100%);
        background: linear-gradient(to bottom, rgba(212,228,239,1) 0%, rgba(98,141,181,1) 100%);
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d4e4ef', endColorstr='#628db5', GradientType=0 );
        text-align: right;
    }
</style>
@(
 X.Panel()
    .Border(false)
        .Listeners(l => l.AfterRender.Handler = "downloadRptAsnadDaryafti()")
    .ID("GetAsnadDaryafti")
    .AutoScroll(false)
    .CloseAction(Ext.Net.CloseAction.Destroy)
    .Layout(LayoutType.VBox)
    .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Center })
    .Items(
        X.Panel()
            .Border(false)
            .ItemID("pnlGetAsnadDaryafti")
            .Listeners(l => l.Render.Handler = "App.GetAsnadDaryafti.queryById('pnlGetAsnadDaryafti').setHeight(Ext.getBody().getViewSize().height-200);")
            .Layout(LayoutType.HBox)
            .LayoutConfig(new HBoxLayoutConfig { Align = HBoxAlign.Middle })
            .Items(
                X.Label("لطفا تا بارگزاری کامل فایل گزارش منتظر بمانید. با تشکر").ItemID("lblNatije")
                .Cls("whitecolorrrr"))
    )
)
<script type="text/javascript">
    function downloadRptAsnadDaryafti() {
        window.location.href = '/Daramad/Report/DownloadRptAsnadDaryafti?StartDate=' + '@ViewBag.StartDate' + "&EndDate=" + '@ViewBag.EndDate' + "&TypeSand=" + '@ViewBag.TypeSand' + "&Status=" + '@ViewBag.Status' + "&StatusName=" + '@ViewBag.StatusName' + "&flag=" + '@ViewBag.flag';

    }
</script>
