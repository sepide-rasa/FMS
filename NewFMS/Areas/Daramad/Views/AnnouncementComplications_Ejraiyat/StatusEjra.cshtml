                                data: JSON.stringify(data1),
                                contentType: 'application/json',
                                success: function (result) {
                                    if (result.Er == 1) {
                                        Ext.net.Mask.hide();
                                        Ext.MessageBox.show({
                                            title: "خطا",
                                            msg: result.Msg,
