@using Ext.Net.MVC;

@(
 Html.X().Window().Height(560)
    .Title("پیش نمایش")
    .ID("PrintrptRecieptMoadi")
    .AutoScroll(false)
    .Maximized(true)
    .Modal(true)
    .Listeners(l => l.AfterRender.Handler = "LoadReportRecieptMoadi();")
    .Closable(true)
    .CloseAction(Ext.Net.CloseAction.Destroy)
    .Html("<center><object class='se-pre-con' style='width: 100%;height: 100%;border: 1px solid #ccc;' type='application/pdf' data='/Daramad/instalments/GeneratePDFPrintReciept?ElameAvarezId=" + @ViewBag.ElameAvarezId + "&ReplyTaghsitId=" + @ViewBag.ReplyTaghsitId + "&OrganId=" + @ViewBag.OrganId +"'></object></center>")
)

<script>
    function LoadReportRecieptMoadi() {
        var a = $('object');
        var h = App.PrintrptRecieptMoadi.height;
        a.height(h-35);
    }
</script>