                .Listeners(l => { l.Click.Handler = "SaveParametreOmoomi();"; })
            , X.Button().Text("ویرایش").Icon(Ext.Net.Icon.Pencil)
                    .Listeners(l => { l.Click.Handler = "LoadParametreOmoomi();"; })
