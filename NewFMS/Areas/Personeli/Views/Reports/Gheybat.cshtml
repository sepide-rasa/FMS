                                X.ComboBox()
                                    .ItemID("CboMonth")
                                    .Editable(true)
                                    .ForceSelection(true)
                                    .TypeAhead(true)
                                    .AllowBlank(false)
                                    .BlankText("لطفا ماه را انتخاب کنید.")
                                    .Listeners(l =>
                                    {
                                        //l.AfterRender.Handler = "setValueMonthRpt()";
                                    })
                                    .QueryMode(DataLoadMode.Local)
