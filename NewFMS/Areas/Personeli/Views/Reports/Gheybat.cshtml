@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

<style>
    td {
        text-align: left;
    }
</style>

@(Html.X().Panel()
    .Closable(true)
    .Border(false)
                    .Listeners(li => { li.AfterRender.Handler = "setTitlePnlRpt2()"; li.Render.Fn = "addKeyMapGheybat"; })
    .CloseAction(CloseAction.Destroy)
    
    .Layout(LayoutType.Fit)
    .ID("RptGheybat" + @ViewBag.State)
