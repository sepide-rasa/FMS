@using Ext.Net.MVC;

@(
 Html.X().Window()
    .ID("PrintHokm")
    .Modal(true)
    .Width(925)
    .Height(500)
    .Title("پیش نمایش")
    .AutoScroll(false)
    .Closable(true)
    .Maximized(true) 
    .CloseAction(Ext.Net.CloseAction.Destroy).Listeners(l=>l.AfterRender.Handler="LoadReport();")
                            .Html("<center><object class='se-pre-con' style='width: 100%;height: 100%;border: 1px solid #ccc;' type='application/pdf' data='/PersonalHokm/GeneratePDF?PersonalHokmId=" + ViewBag.PersonalHokmId + "&PersonalId=" + ViewBag.PersonalId + "&AnvaeEstekhdamId=" + ViewBag.AnvaeEstekhdamId + "&TarikhEjra=" + ViewBag.TarikhEjra + "&Details=" + ViewBag.Details + "'></object></center>")
)
<script>
    function LoadReport() {
        var a = $('object');
        var h = App.PrintHokm.height;
        a.height(h-35);
    }
</script>
