        var txtMatnLetterMAx = tinyMCE.getInstanceById('txtMatnLetterMAx');
        var content = txtMatnLetterMAx.getContent();
        var activeEditor = tinyMCE.get('txtMatnLetter');
        activeEditor.setContent(content);
        App.MatnWord.destroy();

    }
