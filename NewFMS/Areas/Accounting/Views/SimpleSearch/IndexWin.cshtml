                                        X.TextField()
                                            .ItemID("txtBedehkar")
                                            .MaskRe("[0-9]")
                                            .AllowBlank(true)
                                            .MaxLength(100)
                                            .EnforceMaxLength(true),
                                               X.Label("بستانکار:"),
                                        X.TextField()
                                            .ItemID("txtBestankar")
                                            .MaskRe("[0-9]")
                                            .AllowBlank(true)
                                            .MaxLength(100)
                                            .EnforceMaxLength(true),
                                              X.Label().Text("از تاریخ:").ItemID("lblAzTarikh"),
                                        X.PDateField()
        //    .Width(100)
                                        .ItemID("txtAzTarikh")
                                        .AllowBlank(false)
                                        .MaskRe("[0-9,/]")
                                        .BlankText("لطفا از تاریخ را وارد کنید.")
                                        .PaddingSpec("0 0 0 10px")
                                            .Listeners(l =>
                                            {
                                                l.Select.Handler = "ChangeAzTarikh()";
                                                l.Blur.Handler = "SetCorrDateAz(0)";
                                                l.SpecialKey.Handler = "SetCorrDateAz(e.getKey());";
                                            })
                                            .Editable(true),
                                    X.Label().Text("تا تاریخ:").ItemID("lblTaTarikh"),
                                        X.PDateField()
        //  .Width(100)
                                            .ItemID("txtTaTarikh")
                                            .MaskRe("[0-9,/]")
        // .PaddingSpec("0 0 0 10px")
